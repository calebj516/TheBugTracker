@model TheBugTracker.Models.ViewModels.AssignDeveloperViewModel


<div class="row d-flex flex-row justify-content-center mt-5 mb-0">
    <div class="col-sm-8 col-md-6">
        <h2>Assign Developer</h2>
        <a style="font-size:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket?.ProjectId">@Model.Ticket?.Project?.Name</a>
        <div class="card mt-2">
            <div class="card-header">
                <label class="control-label">Assign developer to ticket @Model.Ticket?.Title</label>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                    <input type="hidden" asp-for="Ticket.Id" />
                    <p>Description: @Model.Ticket?.Description</p>

                    <div class="form-group">
                        <label class="form-label">Select Developers</label>

                        <select required asp-for="DeveloperId" asp-items="@Model.Developers" class="form-control">
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Assign" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class ="mt-2">
            <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
        </div>
    </div>
</div>