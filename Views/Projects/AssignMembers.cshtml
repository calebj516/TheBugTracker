@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel




<div class="row d-flex flex-row justify-content-center mt-5 mb-0">
    <div class="col-sm-8 col-md-6">
        <h2>Assign team members</h2>
        <div class="card">
            <div class="card-header">
                <label asp-for="@Model.Users" class="control-label">Assign Members for @Model.Project.Name</label>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                    <input type="hidden" asp-for="Project.Id" />
                    <div class="col-12 mb-3">
                        <div class="form-group">
                            <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn alert-primary" value="Assign Users" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to Details</a>
        </div>
    </div>
</div>
