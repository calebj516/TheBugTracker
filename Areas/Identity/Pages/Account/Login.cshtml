@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
<div class="row d-flex justify-content-center">
    <div class="col-10 col-md-6 col-lg-4">
        <section class="mt-3">
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input id="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input id="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Log in</button>
                </div>
                <div class="mt-2">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>

                <h2 class="text-center">OR</h2>
                <h2 class="mt-3 text-center">Use a demo account.</h2>
                <div class="d-flex flex-column align-items-center">
                    <button type="submit" class="w-75 btn btn-lg btn-primary mt-3" onclick="demoAdmin()">Admin</button>
                    <button type="submit" class="w-75 btn btn-lg btn-primary mt-2" onclick="demoPM()">Project Manager</button>
                    <button type="submit" class="w-75 btn btn-lg btn-primary mt-2" onclick="demoSubmitter()">Submitter</button>
                    <button type="submit" class="w-75 btn btn-lg btn-primary mt-2" onclick="demoDeveloper()">Developer</button>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
        demoAdmin = () => {
            document.getElementById("email").value = "btadmin1@bugtracker.com";
            document.getElementById("password").value = "Abc&123!";
        }

        demoPM = () => {
            document.getElementById("email").value = "ProjectManager1@bugtracker.com";
            document.getElementById("password").value = "Abc&123!";
        }

        demoSubmitter = () => {
            document.getElementById("email").value = "submitter1@bugtracker.com";
            document.getElementById("password").value = "Abc&123!";
        }

        demoDeveloper = () => {
            document.getElementById("email").value = "Developer3@bugtracker.com";
            document.getElementById("password").value = "Abc&123!";
        }
    </script>
}
